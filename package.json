{
  "name": "language-center-management",
  "version": "1.0.0",
  "description": "English Language Center Management System",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run dev",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test": "cd backend && npm test",
    "build": "cd frontend && npm run build",
    "render-build": "npm install && cd backend && npm install && cd .. && node build-frontend.js",
    "render-start": "cd backend && NODE_ENV=production npm start"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "",
  "license": "ISC"
}
